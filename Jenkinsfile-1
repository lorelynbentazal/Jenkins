pipeline {
  agent any
    stages {
      stage('SCM') {
      git 'https://github.com/lorelynbentazal/Jenkins.git'
      }
      stage('SonarQube analysis') {
        def scannerHome = tool 'SonarScanner 4.0';
        withSonarQubeEnv('sonar') { 
          sh "${scannerHome}/bin/sonar-scanner"
        }
    }
  }
}

